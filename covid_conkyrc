#HEADER
${color1}${font DejaVu Sans Mono:size=12}COVID-19 in Lithuania
${execpi 5 ~/.config/conky/corona.sh Lithuania 1 8 4 7 5 | sed -e 1's/.*/${color6}Rank:      ${color}&/' | sed -e 2's/.*/${color6}Active:    ${color1}&/' | sed -e 3's/.*/${color6}New Cases: ${color7}&/' | sed -e 4's/.*/${color6}Recovered: ${color8}&/' | sed -e 5's/.*/${color6}Deaths:    ${color3}&/'}


