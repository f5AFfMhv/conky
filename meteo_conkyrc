#!/usr/bin/conky -d -c
# .conkyrc configuration for displaying weather info from meteo.lt
#
# By Martynas J. 2021

alignment bottom_left
xinerama_head 1 #show on second display
background yes
border_width 5
color0 8258FA #graph color 1		
color1 FCAF3E #header color	
color2 17BA91 #key color
color3 FA5858 #graph color 2		
default_color e1e1e1		
default_outline_color 000000	
default_shade_color 000000
double_buffer yes
draw_borders no
draw_graph_borders no
draw_outline no
draw_shades no
gap_x 10
gap_y 300
max_user_text 1000
maximum_width 300
minimum_size 300
net_avg_samples 2
no_buffers yes
override_utf8_locale yes
own_window yes
#own_window_colour 000000
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_argb_visual yes
own_window_transparent yes
own_window_type normal
own_window_class override
pad_percents 2			
short_units yes			
stippled_borders 3
text_buffer_size 10000
total_run_times 0
update_interval 10.0
uppercase no
use_spacer right
use_xft yes
xftalpha 0.75
xftfont sans:size=10

TEXT

#HEADER
${color1}${font DejaVu Sans Mono:size=12}Weather forecast in Vilnius
${color}${font DejaVu Sans Mono:size=10}(updated: ${execpi 3600 ~/.config/conky/meteo.sh -u})

#FORECAST
${font DejaVu Sans Mono:size=12}${execpi 3600 ~/.config/conky/meteo.sh --location vilnius --hours 12 | sed 's/\xe2\x84\x83/Â°C/g' | awk '{print "${color2}" $1 "${goto 70}${color3}" $2 "${goto 140}${color}" $3}'}