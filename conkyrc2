#!/usr/bin/conky -d -c
# .conkyrc configuration for second conky window displaying kern.log

alignment bottom_left
xinerama_head 1 #show on second display
background yes
border_width 5
color0 555555		
color1 FCAF3E			
color2 64574e			
color3 a82553			
color4 5e1014			
color5 64574e			
color6 a7a7a7			
color7 8888CC			
color8 9d9c61			
color9 525276			
default_color e1e1e1		
default_outline_color 000000	
default_shade_color 000000
double_buffer yes
draw_borders no
draw_graph_borders no
draw_outline no
draw_shades yes
gap_x 0
gap_y -20
max_user_text 10000
maximum_width 1920
minimum_size 1920
net_avg_samples 2
no_buffers yes
override_utf8_locale yes
own_window yes
own_window_colour 000000
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_transparent yes
own_window_type override
pad_percents 2			
short_units yes			
stippled_borders 3
text_buffer_size 10000
total_run_times 0
update_interval 1.0
uppercase no
use_spacer right
use_xft yes
xftalpha 0.75
xftfont sans:size=10

TEXT

#HEADER
${color}${font led:size=10} ${exec date}${alignr}${color1}${font DejaVu Sans Mono:size=10} kern.log
${color1}${font led:size=15}${font}$hr
#LOG FILE
${color6}${font Monospace:size=9}${execpi 5 tail -5 /var/log/kern.log | awk '{$1=$2=""; $4=$5="-"; print $0}' | sed '1~2 s/$/${color}/g' | sed '0~2 s/$/${color6}/g'}
#${color1}${font led:size=15}${font}$hr


